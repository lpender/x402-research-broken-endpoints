# Base/EVM Configuration
# Hex private key with 0x prefix - ONLY use a dedicated test wallet!
EVM_PRIVATE_KEY=0x_your_hex_private_key_here

# Base RPC URL (mainnet)
BASE_RPC_URL=https://mainnet.base.org

# Solana Configuration
# 64-byte base58 private key (contains both private and public key)
# ONLY use a dedicated test wallet with minimal funds!
SOLANA_PRIVATE_KEY=your_base58_private_key_here

# Solana RPC URL (mainnet for real payments, devnet for testing)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Experiment Configuration
# Mode: mock | no-zauth | with-zauth
MODE=mock

# Number of iterations per mode (50-150 recommended)
ITERATIONS=100

# Delay between requests in milliseconds (5000-30000 to avoid rate limits)
DELAY_MS=5000

# Hard limit on USDC spend per run (safety control)
MAX_USDC_SPEND=1.00

# Mock endpoint failure rate (0.0-1.0, only used in mock mode)
MOCK_FAILURE_RATE=0.30

# Zauth Configuration
ZAUTH_DIRECTORY_URL=https://back.zauthx402.com/api/verification/directory
ZAUTH_CHECK_URL=https://back.zauthx402.com/api/verification/check

# Output Configuration
OUTPUT_DIR=./results
VERBOSE=false
